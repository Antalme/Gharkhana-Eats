<%- include('head') %>
    <link href="css/login-registro.css" rel="stylesheet">

    <body>
        <%- include('cabecera') %>
            <div class="cuerpo">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <h2 class="titulo text-center mb-4">¡Inicia sesión con tu cuenta!</h2>
                        <hr>
                        <form action="/login" method="POST">
                            <div class="form-group">
                                <input type="text" class="form-control" id="usuario" name="usuario"
                                    placeholder="Nombre de usuario" required>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" id="pass" name="pass"
                                    placeholder="Contraseña" required>
                            </div>
                            <button type="submit" class="btn btn-block mb-3">Iniciar sesión</button>
                            <div id="tituloPie">
                                <p><a href="/registro">Si no tienes cuenta, puedes registrate desde aquí</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
    </body>

    <script src="js/login.js" defer></script>

    <%- include('footer') %>